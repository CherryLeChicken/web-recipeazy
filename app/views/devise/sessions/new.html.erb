<div class="container">
  <h2>Log in</h2>
  
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, id: "email" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },id: "password" %>
        <br>
        
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-info" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>